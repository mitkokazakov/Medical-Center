@model PatientTestsAndDiagnosesViewModel

<div class="row offset-md-3 ">
    <div class="accordion col-md-10 col-sm-12 text-center " id="accordionExample">
        <div class="card border border-dark bg-info mb-5">
            <div class="card-header" id="headingOne">
                <h2 class="mb-0">
                    <button class="btn btn-link  text-white" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                        All Blood Tests
                    </button>
                </h2>
            </div>

            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body  text-white">
                    @if (this.Model.BloodTests.Count == 0)
                    {
                        <h5 class="text-white">No tests available</h5>
                    }
                    else
                    {
                        @foreach (var test in this.Model.BloodTests)
                        {
                            <a class="text-white" href="/BloodTests/SeeResults/@test.Id">@test.CreatedOn - Dr. @test.DoctorFullName</a>
                            <br />
                        }
                    }

                </div>
            </div>
        </div>
        <div class="card border border-dark bg-info">
            <div class="card-header" id="headingTwo">
                <h2 class="mb-0">
                    <button class="btn btn-link collapsed text-white" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        All Medical Examinations
                    </button>
                </h2>
            </div>
            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                <div class="card-body">
                    @if (this.Model.AllMedicalExaminations.Count == 0)
                    {
                        <h5 class="text-white">No diagnoses</h5>
                    }
                    else
                    {
                        <table class="table table-striped table-hover">
                            <tr>
                                <th>Date</th>
                                <th>Conclusion</th>
                            </tr>

                            @foreach (var medExam in this.Model.AllMedicalExaminations)
                            {
                                <tr>
                                    <td>@medExam.Date</td>
                                    <td>@medExam.Diagnose</td>
                                </tr>

                            }

                        </table>

                    }

                </div>
            </div>
        </div>

    </div>
</div>
