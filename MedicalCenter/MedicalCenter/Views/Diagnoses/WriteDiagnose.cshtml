@model DiagnoseFormModel
<div class="row">

    <partial name="_SideNavBarDoctors" />

    <form class="form-check col-md-6 offset-md-2" method="post" asp-controller="Diagnoses" asp-action="WriteDiagnose">
        <h2 class="heading-margin text-center">Write Diagnose</h2>
        <div class="form-group">
            <label asp-for="Diagnose"></label>
            <textarea asp-for="Diagnose" rows="10"  class="form-control"></textarea>
            <span asp-validation-for="Diagnose" class="small text-danger"></span>
        </div>

        
        <input class="btn btn-success mt-3 text-center" type="submit" value="Write" />
    </form>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
