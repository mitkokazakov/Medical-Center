    <header id="topheader" class="text-white">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow mb-3" id="topheader">
            <div class="container">

                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Zara Medical Center</a>
                <button class="navbar-toggler bg-light" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (this.User.IsInRole("Doctor") || this.User.IsInRole("Laboratory Assistant"))
                        {


                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Doctors" asp-action="ViewProfile">Doctor's Profile</a>
                            </li>
                        }

                        @if (this.User.IsInRole("Patient"))
                        {

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Patients" asp-action="ViewProfile">Patient's Profile</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Patients" asp-action="ViewRecord">Medical Record</a>
                            </li>
                        }


                        @if (this.User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Administrator" asp-controller="Administrator" asp-action="Overview">Admin Panel</a>
                            </li>
                        }
                        @if (this.User.IsInRole("Doctor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Doctors" asp-action="Manage">Manage</a>
                            </li>
                        }
                        @if (this.User.IsInRole("Laboratory Assistant"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Doctors" asp-action="Tests">Tests</a>
                            </li>
                        }



                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Doctors" asp-action="AllDoctors">All Doctors</a>
                        </li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>



    <div class="container mr-4 ml-4 ">
        <main role="main" class="pb-3">

            @if (TempData.ContainsKey("Error"))
            {
                <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">
                    <strong>@TempData["Error"]</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            @RenderBody()
        </main>
    </div>




    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.UtcNow.Year - Zara Medical Center
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)

</body>
