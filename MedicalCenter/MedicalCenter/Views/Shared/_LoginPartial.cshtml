@using Microsoft.AspNetCore.Identity
@inject SignInManager<MedicalCenter.Data.Data.Models.ApplicationUser> SignInManager
@inject UserManager<MedicalCenter.Data.Data.Models.ApplicationUser> UserManager
@inject MedicalCenter.Services.Services.DoctorService DoctorService
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (!this.User.IsInRole("Patient") && !this.User.IsInRole("Doctor") && !this.User.IsInRole("Admin") && !this.User.IsInRole("Laboratory Assistant"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Patients" asp-action="Add">Complete Patient's Profile</a>
            </li>
        }

        @if (!this.DoctorService.IsDoctorProfileCompleted(this.UserManager.GetUserId(this.User)))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Doctors" asp-action="Add">Complete Doctor's Profile</a>
            </li>
        }

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">My Account</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
