@model MedicalCenter.Services.ViewModels.Patients.PatientProfileViewModel

<div class="d-flex justify-content-between">

    <partial name="_SideNavBarDoctors" />

    <div class="card text-center bg-info text-white">
        <div class="card-header">
            Patient's EGN - @this.Model.EGN
        </div>
        <div class="card-body">
            <h5 class="card-title">@this.Model.FullName</h5>
            <p class="card-text">Country - @this.Model.Country</p>
            <p class="card-text">Address - @this.Model.Town, @this.Model.Address</p>
            @if (this.User.IsInRole("Doctor"))
            {
                <a asp-controller="BloodTests" asp-action="ViewBloodTests" asp-route-id="@this.Model.Id" class="btn btn-light">View Tests</a>
                <a asp-controller="BloodTests" asp-action="SendBloodTests" asp-route-id="@this.Model.Id" class="btn btn-light">Make Tests</a>
            }

            @if (this.User.IsInRole("Laboratory Assistant"))
            {
                <a asp-controller="BloodTests" asp-action="AllBloodTests" asp-route-id="@this.Model.Id" class="btn btn-light">Fill Tests</a>
            }

        </div>
        <div class="card-footer text-white">
            Age - @this.Model.Age
        </div>
    </div>

    <div>

    </div>
</div>