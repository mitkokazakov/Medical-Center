@model MedicalCenter.Services.ViewModels.Doctors.AddDoctorFormModel
@{
    ViewBag.Title = "Add Doctor";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Specialty"></label>
                <input asp-for="Specialty" class="form-control">
                <span asp-validation-for="Specialty" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Biography"></label>
                <textarea asp-for="Biography" class="form-control" rows="15"></textarea>
                <span asp-validation-for="Biography" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image"></label>
                <input asp-for="Image" class="form-control">
                <span asp-validation-for="Image" class="small text-danger"></span>
            </div>


            <input class="btn btn-success mt-3 text-center" type="submit" value="Add" />
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


