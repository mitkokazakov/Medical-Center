@model MedicalCenter.Services.ViewModels.Doctors.InputScheduleFormModel

<div class="d-flex">

    <partial name="_SideNavBarDoctors" />


    <form class="form-check col-md-8 ml-auto" asp-controller="Doctors" asp-action="MakeSchedule" method="post">

        <div class="form-group">
            <label asp-for="Date"></label>
            <input type="datetime-local" asp-for="Date" />
            <span asp-validation-for="Date" class="small text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Add Hour</button>
    </form>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}