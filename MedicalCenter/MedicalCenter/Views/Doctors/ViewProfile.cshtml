@model PreviewDoctorProfileViewModel



<div class="container col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 d-flex justify-content-center">
    
    <div class="card" style="width:400px">
        <h2 class="card-text text-center">This is my Profile</h2>

        @if (String.IsNullOrEmpty(this.Model.ImagePath) || this.Model.IsImageApproved == false)
        {
            <img class="card-img-top" src="/images/unknowndoctor.jpg" alt="Card image" style="width:100%">
        }
        else
        {
            <img class="card-img-top" src="~/images/@this.Model.ImagePath" alt="Card image" style="width:100%;height:400px">
        }
        <div class="card-body">
            <p class="card-text">@this.Model.Biography</p>
            <a asp-controller="Doctors" asp-action="ChangeProfile" asp-route-id="@this.Model.Id" class="btn btn-warning">Change Profile</a>
            <a href="/Identity/Account/Manage" class="btn btn-warning">Back To Account</a>
        </div>
    </div>
    
</div>


