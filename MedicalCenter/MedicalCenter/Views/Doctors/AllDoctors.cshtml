<script>

    $(".single-doc").slice(0, 3).show();
    $(".view-more-doc").on("click", function () {
        $(".single-doc:hidden").slice(0, 3).slideDown()
    })

    $(".search-btn").on("click", function () {
           $(".search-doc-form").toggle()
    })
</script>